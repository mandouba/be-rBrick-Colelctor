<!-- new markup below -->
<br><br><h2>Destinations</h2>
<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
      	 <th>Airport</th>
        <th>Arrival</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(f) { %>
        <tr>
          <td><%= f.airport %></td>
          <td><%= f.arrival.toLocaleDateString() %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No destinations</h5>
<% } %>
